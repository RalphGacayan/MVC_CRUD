@model IEnumerable<MyMVC_CRUD.Models.User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "All Users";
}
<h2>Registered users</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Userid</th>
            <th>Name</th>
            <th>Address</th>
            <th>EmaillAddress</th>
            <th>Password</th>
            <th colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.Name</td>
                <td>@user.Address</td>
                <td>@user.EmailAddress</td>
                <td>@user.Password</td>
                <td><a asp-action="edit" asp-route-id="@user.UserId" text-info">Edit</a></td>
                <td><a asp-action="delete" class="text-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>